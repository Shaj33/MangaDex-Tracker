{
    "manifest_version": 2,
    "name": "MangaDex Tracker",
    "version": "0.1",

    "permissions": [
        "storage",
        "tabs",
        "https://mangadex.org/chapter/*"
    ],

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "MangaDex Bookmarks",
        "default_icon": {
            "128": "128.png"
        }
    },

    "icons": {
        "128": "128.png"
    }
}